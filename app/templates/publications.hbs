<div class="jumbotron jumbotron-publications-banner jumbotron-fluid">
  <div class="container">
    <div class="jumbotron-content text-light">
      <h1 class="display-3"></h1>
      <p class="lead"></p>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="display-4 mt-3">Publications</h1>
      {{#if publications.loaded}}
        {{list-pagination
          paginateBy=(readonly limit)
          total=(readonly publications.publications.length)
          currentPage=(readonly page)
        }}
        {{publication-list model=paginatedItems}}
        {{list-pagination
          paginateBy=(readonly limit)
          total=(readonly publications.publications.length)
          currentPage=(readonly page)
        }}
      {{else}}
        <p>Loading..{{fa-icon 'circle-o-notch' spin=true}}</p>
      {{/if}}
    </div>
  </div>
</div>
